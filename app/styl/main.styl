$center_block = 0 auto

grid_row_and_col_mixin(row_count = 1, col_count = 1, row_gap = 0, col_gap = 0, row_size = 1fr, col_size = 1fr)
	display grid
	grid-template-rows repeat(row_count, row_size)
	grid-template-columns repeat(col_count, col_size)
	grid-row-gap row_gap px
	grid-column-gap col_gap px

maxmin_width_center_container_mixin(max_width = 1200, min_width = (max_width / 2))
	width 100%
	max-width max_width px
	min-width min_width px
	margin 0 auto

intro_mixin(block_height = 100vh, back_url = '')
	position relative
	width 100%
	background url(back_url) no-repeat center center fixed
	background-size cover
	height block_height vh
	display grid
	justify-content center
	align-items center

title_mixin()
	position relative
	font-size 78px
	text-align center
	z-index 50
	line-height 1

*
	margin 0
	padding 0
	border 0
	box-sizing border-box

body
	font-family 'Bebas Neue'

.container
	width 100%
	max-width 1600px
	margin $center_block

.active
	color goldenrod !important

.overflow
	position absolute
	width 100%
	height 100%
	background-color black
	opacity .6

/* HEADER */
.header
	position absolute
	top 0
	left 0
	padding-top 30px
	z-index 1000
	width 100%
	&__img
		width 100%
		height 100%
		min-width 100px
		min-height 30px
		max-width 300px
		max-height 90px
		img
			width 100%
			height 100%


/* NAV */
.nav
	width 100%
	padding 0 10px
	margin 0 auto
	text-transform uppercase
	font-size 1.3em
	word-break break-all
	font-weight bold
	display grid
	grid-template-columns repeat(6, auto)
	grid-column-gap 10px
	justify-items space-around
	&__link
		font-weight bold
		color white
		padding 10px
		text-decoration none
		transition color .2s linear
		&:hover
			color goldenrod


/* FIRST PAGE STYLE */
/* INTRO */

.intro
	intro_mixin(100, '../img/intro.jpg')
	&__inner
		color white
		maxmin_width_center_container_mixin(1200, 600)
		grid_row_and_col_mixin(1, 1, 10, 0, auto auto)
	&__title
		title_mixin()
	&__button
		display inline
		padding 10px
		font-weight bold
		z-index 1000
		border-radius 10px
		background-color #f45700
		color white
		align-self center
		justify-self center
		font-size 24px
		transition background-color .2s linear
		&:hover
			background-color goldenrod

/* SECTION */
.section
	color #0f2b35 !important
	padding 80px 0
	&__header
		maxmin_width_center_container_mixin(950)
		text-align center
		text-transform uppercase
		padding-bottom 40px
		span
			color #f45700
	&__suptitle
		display inline-block
		font-size 20px
		margin-bottom 30px
		position relative
		&::before
			content ""
			position absolute
			width 100%
			height 4px
			background red
			bottom -10px
	&__title
		font-size 36px
	&:nth-child(even)
		color white !important
		background-color #0f2b35
	&__gallery
		maxmin_width_center_container_mixin(1200)
		grid_row_and_col_mixin(1, auto-fill, 0, 40, 1fr, minmax(280px, 1fr))
		justify-content center
		padding 0 10px
		&__container
			width 100%
			justify-self center
			grid_row_and_col_mixin(1, 1, 5, 0, minmax(280px, 400px) 1fr)
			font-size 20px
			&__title
				padding 0 20px
				text-align justify
			&__subtitle
				padding 0 20px
				color gray
				font-family 'Open Sans', sans serif
				letter-spacing 2px
				opacity .8
			img
				width 100%
				height 100%
				border-radius 15px
/* ABOUT */
.about
	grid_row_and_col_mixin(1, 1, 0, 50, 1fr, 40% 30%)
	justify-content center
	img
		width 100%
		height 100%
		align-self center
		max-height 400px
	&__text
		font-size 1.5em
		align-self center

/* OUR COMMAND*/
.our-command
	color white
	maxmin_width_center_container_mixin(1300, 600)
	grid_row_and_col_mixin(1, 1, 0, 30, 1fr, 2fr 4fr)
	padding 0 30px
	img
		max-width 600px
		max-height 400px
		width 100%
		height 100%
		min-width 300px
		min-height 300px
		align-self center
		border-radius 25px
	&__text
		align-self center
		font-size 1.3em
		font-weight normal
		height 100%
		grid_row_and_col_mixin(1, 1, 0, 0, 1fr 7fr 1fr)
		align-items center
		span
			color #f45700
			font-size 2em
		&__about-me
			text-transform none !important

.video-block
	maxmin_width_center_container_mixin(800)
	video
		width 100%

/* OUTRO*/
.outro
	width 100%
	height 70vh
	background url('https://i0.wp.com/seashepherd.org/wp-content/uploads/2022/09/2012-Op-Requiem-120802_SA_Tonga_mother_humpback_pushes_calf_to_surface_to_breathe_002_6281-V2.jpg?fit=1920%2C1357&ssl=1') center no-repeat
	background-size cover
	position relative
	&__header
		position relative
		color white 
		maxmin_width_center_container_mixin(900)
		text-align center
		text-transform uppercase
		padding-bottom 40px
		padding 80px 0 40px
		span
			color #f45700
	&__suptitle
		font-size 20px
		padding-bottom 30px
	&__title
		font-size 36px
	&__keep-us
		color white
		maxmin_width_center_container_mixin(400)
		grid_row_and_col_mixin(1, 1, 10, 0, 1fr 6fr 1.5fr)
		&__suptitle
			text-align center
			font-size 20px
			z-index 1
		&__inputs
			grid_row_and_col_mixin(3, 1, 5, 0, 1fr)
			input
				padding 0 20px
				border-radius 10px
				font-size 18px
				font-weight 600
				z-index 1
		&__button
			background-color #007b9a
			font-size 20px
			color white
			font-weight bold
			border-radius 10px
			z-index 1

/* FOOTER */
.footer
	background-color black
	padding 50px 0 100px
	&__inner
		maxmin_width_center_container_mixin(800)
	&__img
		justify-self center
		img
			width 100%
			height 100%
	&__nav
		padding-top 20px
		justify-self center
		grid_row_and_col_mixin(auto-fit, 3, 10px, 10px, auto, 1fr)
		font-size 24px
		&__link
			font-weight bold
			color white
			justify-self center
			align-self center
			text-decoration none
			transition color .2s linear
			&:hover
				color goldenrod


/* SECOND PAGE */

.second-intro
	position relative
	color white
	intro_mixin(70,'../img/secondIntro.jpg')
	&__title
		title_mixin()

/* REVERSE ABOUT */
.reverse-about
	grid_row_and_col_mixin(1, 1, 0, 20, 1fr, 40% 40%)
	justify-content center
	img
		grid-column 2 / -1
		grid-row 1 / -1
		width 100%
		height 100%
		align-self center
		max-height 400px
	&__text
		grid-column 1 / 2
		grid-row 1 / -1
		font-size 1.5em
		align-self center

/* THIRD PAGE*/
.third-intro
	intro_mixin(70, "../img/aboutUs2.jpg")
	color white
	&__title
		title_mixin()

.section__sort
	width 95%
	margin $center_block
	grid_row_and_col_mixin(1, auto-fill, 0, 5, 1fr, minmax(400px, 33%))
	justify-content center

.details
	font-size 20px
	text-align center
	min-width 400px
	&__form
		border 2px black solid
		border-radius 15px
		grid_row_and_col_mixin(auto-fill, 2, 5, 10)
		padding 10px
		&__left
			text-align justify
			grid-column 1 / 2
		&__right
			text-align justify
			grid-column 2 / -1 
		&__input
			border 2px black solid
			max-height 32px
		&__select
			border 2px black solid
		&__checkbox
			justify-self flex-start
		&__button
			grid-column 1 / -1
			width 50%
			justify-self center
			height 32px
			font-size 24px
			background-color #0f2b35
			color white
			border-radius 15px
			transition background-color .2s linear
			&:hover
				background-color goldenrod

.details-second

.section__table
	width 95%
	margin 0 auto
	max-height 600px
	overflow hidden
	overflow-y auto
	overflow-x auto
.table
	width 100%
	min-width 1200px
	margin $center_block
	overflow hidden
	border-collapse collapse
	background-color white
	color black
	text-align center
	&__tr
		border 2px black solid
	&__td
		border 2px black solid
		font-size 18px
		&:nth-child(even)
			background-color #d8d6d6
		&:nth-child(odd)
			background-color #f2f2f2
	&__th
		font-weight bold
		font-size 20px
		border 2px black solid
		background-color goldenrod
	&__image
		width 100%
		height 100%

@media(max-width:700px)
	.header
		padding-top 10px
		&__img
			margin $center_block
		&__inner
			grid-template-columns 95%
			grid-row-gap 10px
			justify-content center
		.nav
			padding-top 10px
			grid-template-columns 1fr 1fr
			grid-template-rows repeat(auto-fit, 1fr)
			grid-column-gap 5px
			grid-row-gap 10px
			&__link
				word-break normal !important
				display block
				width 100%
				height 100%
				text-align center
	.footer
		&__inner
			max-width 90%
			width 100%
		&__img
			max-width 300px
			max-height 100px
		&__nav
			padding-top 20px
			font-size 24px
			width 100%
			grid_row_and_col_mixin(auto-fit, 2, 10, 10, 1fr, 40%)
			justify-content space-evenly
			&__link
				word-break normal !important
				text-align center


/* FIRST PAGE MEDIA */
@media(max-width:700px)
	.intro
		&__inner
			width 100%
			grid-template-columns 90%
			justify-content center
			max-width 100%
			min-width 100%
		&__title
			font-size 54px
	.about
		width 100%
		grid-template-columns 90%
		grid-column-gap 0
		grid-row-gap 20px
		text-align justify
	.our-command
		width 100%
		grid-template-columns 90%
		justify-content center
		min-width 100%
		padding 0
		img
			margin $center_block
			max-width 350px
			max-height 350px
		&__text
			grid-template-rows 1fr 6fr 1fr
	.section
		&__gallery
			grid_row_and_col_mixin(auto-fit, 1, 0, 10px, 1fr, 90%)
			min-width 100%
			padding 0
			&__container
				width 80%
	.video-block
		max-width 90%

/* SECOND MEDIA PAGE */
@media(max-width:700px)
	.second-intro
		&__inner
			width 100%
			max-width 100%
			min-width 100%
		&__title
			font-size 64px

	.reverse-about
		width 100%
		grid-template-columns 90%
		grid-column-gap 0
		grid-row-gap 20px
		text-align justify
		img
			grid-column 1 / -1
		&__text
			grid-column 1 / -1

/* THIRD PAGE MEDIA */
@media(max-width:700px)
	.third-intro
		&__inner
			width 100%
			max-width 100%
			min-width 100%
		&__title
			font-size 64px
	.table
		&__th
			font-size 18px
			font-weight bold
		&__td
			font-size 14px
			font-weight bold

	.section__sort
		width 100%
		grid_row_and_col_mixin(auto-fit, 1, 10, 0, 1fr, 90%)